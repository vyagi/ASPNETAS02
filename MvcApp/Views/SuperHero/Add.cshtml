@model CreateSuperHero

<form asp-controller="SuperHero" asp-action="Add" method="POST">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input class="form-control" name="Name" asp-for="Name"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Age">Age</label>
        <input class="form-control" name="Age" asp-for="Age"/>
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Powers">Powers</label>
        <input class="form-control" name="Powers" asp-for="Powers"/>
        <span asp-validation-for="Powers" class="text-danger"></span>
    </div>
    <input class="btn btn-primary" type="submit" value="Add"/>
</form>